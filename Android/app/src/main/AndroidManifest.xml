<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lod.movie_extended">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".injection.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activity.languagePicker.LanguagePickerActivity">

        </activity>
        <activity android:name=".ui.activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.qrCodeReader.QrCodeReaderActivity"/>
        <activity android:name=".ui.activity.filmShow.FilmShowActivity">

        </activity>
        <activity android:name=".ui.activity.filmPreparation.FilmPreparationActivity"/>

        <activity android:name=".ui.activity.film.FilmActivity"/>

        <service android:name=".service.PlayerNotificationService"/>

        <receiver android:name=".receiver.HeadsetEventReceiver"/>
    </application>
</manifest>
